extends layout

block content
	#adduser.mainbox
		a(href='') Back
		h1 Add User 
		p Please fill out info.
		form(action='/adduser', method='post')
			ol
				li: input#username(type='text', name='username')
				li: input#password(type='password', name='password')
				li: input#admin(type='checkbox', name='admin')
				li: input#email(type='text', name='email')
				li: input#submit(type='submit', value='submit')
			a(href='/logout') log out